<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/create.event.layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/eventCreateFormPadding"
    tools:context="org.duder.view.activity.CreateEventActivity">

    <RelativeLayout
        android:id="@+id/layout.create_event_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="@+id/create.event.layout"
        app:layout_constraintRight_toRightOf="@+id/create.event.layout">

        <EditText
            android:id="@+id/event_name"
            style="@android:style/Widget.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:hint="@string/eventNameHint"
            android:textSize="@dimen/body_text_size_large" />

        <ScrollView
            android:id="@+id/event_description_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/pick_date_time"
            android:layout_below="@id/event_name">


            <EditText
                android:id="@+id/event_description"
                style="@android:style/Widget.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:background="@null"
                android:hint="@string/eventDescription" />


        </ScrollView>

        <LinearLayout
            android:id="@+id/pick_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/hobby_list">

            <EditText
                android:id="@+id/in_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:focusable="false"
                android:hint="@string/dateHint"
                android:inputType="none"
                app:layout_constraintBottom_toTopOf="@+id/hobby_list"
                app:layout_constraintLeft_toLeftOf="parent" />

            <EditText
                android:id="@+id/in_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:focusable="false"
                android:hint="@string/timeHint"
                android:inputType="none"
                app:layout_constraintLeft_toRightOf="@+id/in_date" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/hobby_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/element_spacing_normal"
            android:layout_marginRight="@dimen/element_spacing_normal"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progress_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/element_spacing_normal"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>